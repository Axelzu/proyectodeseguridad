@model IEnumerable<Proyecto.Models.Activo>
@{
    ViewData["Title"] = "Activos";
}

<h2>Activos de Información</h2>
<a href="/Activos/Create" class="btn btn-primary">Nuevo Activo</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Clasificación CIA</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Tipo</td>
                <td>@item.ClasificacionCIA</td>
                <td>$@item.Valor</td>
                <td><a href="/Activos/Delete/@item.Id" class="btn btn-danger btn-sm">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>
