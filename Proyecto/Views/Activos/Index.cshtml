@model IEnumerable<Proyecto.Models.Activo>
@{
    ViewData["Title"] = "Activos";
}

<h2>Lista de Activos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Valor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Categoria</td>
                <td>@item.Valor.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuevo Activo</a>