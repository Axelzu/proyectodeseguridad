@model Proyecto.Models.Activo
@{
    ViewData["Title"] = "Crear Activo";
}

<h2>Crear Activo</h2>

<form asp-action="Create">
    @Html.AntiForgeryToken()
    <div>
        <label>Nombre:</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger" />
    </div>

    <div>
        <label>Descripción:</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div>
        <label>Fecha de Registro:</label>
        <input asp-for="FechaRegistro" type="date" class="form-control" />
    </div>

    <div>
        <label>Valor:</label>
        <input asp-for="Valor" type="number" class="form-control" />
    </div>

    <div>
        <label>Categoría:</label>
        <input asp-for="Categoria" class="form-control" />
    </div>

    <div>
        <label>Disponible:</label>
        <input asp-for="ActivoDisponible" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>