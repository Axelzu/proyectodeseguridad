@model Proyecto.Models.Riesgo

@{
    ViewData["Title"] = "Editar Riesgo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ActivoId" class="form-label"></label>
        <select asp-for="ActivoId"
                asp-items="ViewBag.Activos"
                class="form-select">
            <option value="">-- Seleccione un activo --</option>
        </select>
        <span asp-validation-for="ActivoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amenaza" class="form-label"></label>
        <input asp-for="Amenaza" class="form-control" />
        <span asp-validation-for="Amenaza" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Vulnerabilidad" class="form-label"></label>
        <input asp-for="Vulnerabilidad" class="form-control" />
        <span asp-validation-for="Vulnerabilidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ControlesExistentes" class="form-label"></label>
        <textarea asp-for="ControlesExistentes" class="form-control"></textarea>
        <span asp-validation-for="ControlesExistentes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Probabilidad" class="form-label"></label>
        <input asp-for="Probabilidad" type="number" step="0.01" lang="en" class="form-control" />
        <span asp-validation-for="Probabilidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Impacto" class="form-label"></label>
        <input asp-for="Impacto" type="number" step="0.01" lang="en" class="form-control" />
        <span asp-validation-for="Impacto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones" class="form-label"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
