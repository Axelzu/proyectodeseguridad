@model Proyecto.Models.Riesgo

@{
    ViewData["Title"] = "Editar Riesgo";
}

<h2>Editar Riesgo</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ActivoId"></label>
        <select asp-for="ActivoId"
                asp-items="ViewBag.Activos"
                class="form-control">
        </select>
        <span asp-validation-for="ActivoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amenaza"></label>
        <input asp-for="Amenaza" class="form-control" />
        <span asp-validation-for="Amenaza" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Vulnerabilidad"></label>
        <input asp-for="Vulnerabilidad" class="form-control" />
        <span asp-validation-for="Vulnerabilidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ControlesExistentes"></label>
        <textarea asp-for="ControlesExistentes" class="form-control"></textarea>
        <span asp-validation-for="ControlesExistentes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Probabilidad"></label>
        <input asp-for="Probabilidad" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Probabilidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Impacto"></label>
        <input asp-for="Impacto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Impacto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
