@model Proyecto.Models.Riesgo
@{
	ViewData["Title"] = "Eliminar Riesgo";
}

<h2>Eliminar Riesgo</h2>

<h4>¿Seguro que deseas eliminar el siguiente riesgo?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@Model.Activo.Nombre</dd>

        <dt class="col-sm-3">Amenaza</dt>
        <dd class="col-sm-9">@Model.Amenaza</dd>

        <dt class="col-sm-3">Nivel de Riesgo</dt>
        <dd class="col-sm-9">@Model.NivelRiesgo (@Model.ClasificacionRiesgo)</dd>
    </dl>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
