@model Proyecto.Models.RiesgosIndexViewModel

@{
    ViewData["Title"] = "Listado de Riesgos";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input asp-for="Search"
               name="search"
               class="form-control"
               placeholder="Buscar por activo o amenaza" />
    </div>
    <div class="col-auto">
        <input type="hidden" asp-for="PageSize" />
        <button type="submit" class="btn btn-outline-secondary">
            Filtrar
        </button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Riesgo</a>
    <a asp-controller="Reports"
       asp-action="RiesgosCsv"
       class="btn btn-info ms-2">
        Exportar CSV
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Activo</th>
            <th>Amenaza</th>
            <th>Vulnerabilidad</th>
            <th>Probabilidad</th>
            <th>Impacto</th>
            <th>Nivel de Riesgo</th>
            <th>Clasificación</th>
            <th>Controles</th>
            <th>Observaciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Riesgos)
        {
            <tr>
                <td>@r.Activo.Nombre</td>
                <td>@r.Amenaza</td>
                <td>@r.Vulnerabilidad</td>
                <td>@r.Probabilidad</td>
                <td>@r.Impacto</td>
                <td>@r.NivelRiesgo</td>
                <td>@r.ClasificacionRiesgo</td>
                <td>
                    <a asp-controller="Controles"
                       asp-action="Index"
                       asp-route-riesgoId="@r.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Ver
                    </a>
                </td>
                <td>
                    <a asp-controller="Observaciones"
                       asp-action="Index"
                       asp-route-r="@r.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Ver
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@r.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@r.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@r.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="1"
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search">
                « Primera
            </a>
        </li>
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.PageNumber - 1)"
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search">
                ‹ Anterior
            </a>
        </li>

        @for (int p = 1; p <= Model.TotalPages; p++)
        {
            <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@p"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-search="@Model.Search">
                    @p
                </a>
            </li>
        }

        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.PageNumber + 1)"
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search">
                Siguiente ›
            </a>
        </li>
        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@Model.TotalPages"
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search">
                Última »
            </a>
        </li>
    </ul>
</nav>
