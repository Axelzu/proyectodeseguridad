@model IEnumerable<Proyecto.Models.Control>
@{
    ViewData["Title"] = "Controles";
}

<h2>Controles Implementados</h2>
<a href="/Controles/Create" class="btn btn-primary">Nuevo Control</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Riesgo</th>
            <th>Activo</th>
            <th>Estrategia</th>
            <th>Descripción</th>
            <th>Responsable</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Riesgo?.Amenaza</td>
                <td>@c.Riesgo?.Activo?.Nombre</td>
                <td>@c.Estrategia</td>
                <td>@c.Descripcion</td>
                <td>@c.Responsable</td>
                <td><a href="/Controles/Delete/@c.Id" class="btn btn-danger btn-sm">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>
