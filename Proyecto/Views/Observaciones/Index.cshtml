@model IEnumerable<Proyecto.Models.Observacion>
@{
    ViewData["Title"] = "Observaciones del Riesgo";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-r="@ViewBag.RiesgoId" class="btn btn-primary">
        Nueva Observación
    </a>
    <a asp-controller="Riesgos" asp-action="Details" asp-route-id="@ViewBag.RiesgoId" class="btn btn-secondary">
        Volver al Riesgo
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Autor</th>
            <th>Texto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Fecha.ToString("g")</td>
                <td>@o.Autor</td>
                <td>@o.Texto</td>
            </tr>
        }
    </tbody>
</table>
